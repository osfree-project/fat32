.obc: $(PROJ_BLD)

$(PROJ_BLD)\os2.obc: os2.c
 @echo CC       $^.
 @$(CC) $(COPT) -d__UNICODE__ -fr=$^*.err -fo=$^@ $<

$(PROJ_BLD)\os2.obd: os2.c
 @echo CC       $^.
 @$(CC) $(COPT)  -d__DLL__ -d__UNICODE__ -bd -fr=$^*.err -fo=$^@ $<

$(PROJ_BLD)\stub.obd: stub.c
 @echo CC       $^.
 @$(CC) -q -zq -fr=$^*.err -fo=$^@ $<

$(PROJ_BLD)\init.obd: init.c16
 @echo CC       $^.
 @wcc $(C16OPT)  -d__DLL__ -bd -fr=$^*.err -fo=$^@ $<
