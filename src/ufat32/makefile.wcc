     RECOVER  ufat32.RECOVER, &
     SYS      ufat32.SYS,     &
     LOADTRANSTBL ufat32.LOADTRANSTBL, &
     chkdsk   ufat32.chkdsk,  &
     format   ufat32.format,  &
     recover  ufat32.recover, &
     sys      ufat32.sys,     &
     LoadTranslateTable ufat32.LoadTranslateTable
 @%append $@ EXPORT &
     CHKDSK,  &
     FORMAT,  &
     RECOVER, &
     SYS,     &
     LOADTRANSTBL, &
     chkdsk,  &
     format,  &
     recover, &
     sys,     &
     LoadTranslateTable
 @%append $@ @$[@

$(PROJ_BLD)\uexfat.lnk: $(PROJ_BLD)\uexfat.ols
 @%create $@
 @%append $@ SYSTEM $(SYS) dll
 @%append $@ NAME $(BINROOT)\os2\dll\$^&.dll
 @%append $@ OPTION DESCRIPTION '$(FILEVER)  $(DESC7)'
 @%append $@ OPTION MANYAUTODATA, CASEEXACT
 @%append $@ segment type DATA shared
 @%append $@ OPTION MAP=$[*.wmp
 @%append $@ IMPORT &
     CHKDSK   ufat32.CHKDSK,  &
     FORMAT   ufat32.FORMAT,  &
     RECOVER  ufat32.RECOVER, &
     SYS      ufat32.SYS,     &
     LOADTRANSTBL ufat32.LOADTRANSTBL, &
     chkdsk   ufat32.chkdsk,  &
     format   ufat32.format,  &
     recover  ufat32.recover, &
     sys      ufat32.sys,     &
     LoadTranslateTable ufat32.LoadTranslateTable
 @%append $@ EXPORT &
     CHKDSK,  &
     FORMAT,  &
     RECOVER, &
     SYS,     &
     LOADTRANSTBL, &
     chkdsk,  &
     format,  &
     recover, &
     sys,     &
     LoadTranslateTable
 @%append $@ @$[@

$(PROJ_BLD)\fat32fmt.lnk: $(PROJ_BLD)\fat32fmt.ols
 @%create $@
 @%append $@ SYSTEM $(SYS)
 @%append $@ NAME $(BINROOT)\os2\$^&.exe
 @%append $@ OPTION DESCRIPTION '$(FILEVER)  $(DESC2)'
 @%append $@ OPTION MAP=$[*.wmp
 @%append $@ LIBPATH $(%WATCOM)\lib386;$(%WATCOM)\lib386\os2
 @%append $@ LIB os2386,clib3s
 @%append $@ @$[@

